// Build the unit tests.

cc_defaults {
    name: "perfprofd_test_defaults",

    cflags: [
        "-Wall",
        "-Werror",
        "-O0",
        "-g",
        "-UNDEBUG",
    ],
    cppflags: [
        "-Wno-sign-compare",
        "-Wno-unused-parameter",
    ],

    strip: {
        keep_symbols: true,
    },
}

//
// Unit test for perfprofd
//
cc_test {
    name: "perfprofd_test",
    defaults: [
        "perfprofd_test_defaults",
    ],
    test_suites: ["device-tests"],
    host_supported: true,

    stl: "libc++",
    static_libs: [
        "libperfprofdcored",
        "libsimpleperf_elf_read",
        "libbase",
        "libutils",
        "libz",
    ],
    shared_libs: [
        "libprotobuf-cpp-lite",
        "liblog",
    ],
    target: {
        darwin: {
            enabled: false,
        },
        host: {
            host_ldlibs: [
                "-lncurses",
            ],
        },

        // The live tests require simpleperf.
        android: {
            required: [
                "simpleperf",
            ],
        },

    },
    srcs: [
        "perfprofd_test.cc",
    ],
    data: [
        "canned.perf.data",
        "callchain.canned.perf.data",
    ],
}
